const passport = require('passport');

const { createErrorResponse } = require('../response');
const logger = require('../logger');
const crypto = require('crypto');

module.exports = (passportStrategyName) => { // the passport strategy can be 'bearer' or 'http'
  return function (req, res, next) {
    function callback(err, email) {
      if (err) {
        logger.debug({ err }, 'error during authenticating user');
        return next(createErrorResponse(500, 'Unable to authenticate user'));
      }

      if (!email) {
        return res.status(401).json(createErrorResponse(401, 'Unauthorized'));
      }

      req.user = crypto.createHash('sha256').update(email).digest('hex'); // hash user to increase privacy
      next();
    }

    passport.authenticate(passportStrategyName, { session: false }, callback)(req, res, next);
  };
};
